# IED Server Configuration
PORT=8080
NODE_ENV=development

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# DLT Adapter Configuration
# HashNET adapter now using stagenet environment
HASHNET_ADAPTER_URL=http://localhost:8081
HASHNET_ADAPTER_NAME=hashnet

ALASTRIA_ADAPTER_URL=http://localhost:8082
ALASTRIA_ADAPTER_NAME=alastria

# IED Configuration
IED_BASE_URL=http://localhost:8080

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=console

# Health Check Configuration
HEALTH_CHECK_INTERVAL_MS=30000

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000

# Timeout Configuration
ADAPTER_TIMEOUT_MS=30000
NOTIFICATION_TIMEOUT_MS=30000

# Replication Configuration
# Delay before replicating events to missing networks (milliseconds)
# This prevents duplicate events when networks have propagation delays
# Recommended: 15000ms (15 seconds) for all environments to ensure consistency
# Development: Can be lowered to 5000ms (5 seconds) for faster testing (at risk of duplicates)
REPLICATION_DELAY_MS=15000

# Event Types for Internal Subscription (comma-separated)
# These are the event types that IED will subscribe to for replication
#
# For Alastria v1.5.2+: Use wildcard "*" to subscribe to ALL events (recommended)
# For older versions: List specific event types
#
# Examples:
#   INTERNAL_SUBSCRIPTION_EVENT_TYPES=*  (subscribe to all - Alastria v1.5.2+)
#   INTERNAL_SUBSCRIPTION_EVENT_TYPES=ProductAdded,ProductUpdated,ProductDeleted
#
# Using wildcard to subscribe to ALL events (v1.5.2+ feature)
INTERNAL_SUBSCRIPTION_EVENT_TYPES=*

# Metadata for Internal Subscription (comma-separated)
# Environment tags for event filtering: sbx (sandbox), prd (production), dev (development)
# For Alastria adapter v2: at least one metadata value is required
INTERNAL_SUBSCRIPTION_METADATA=sbx
